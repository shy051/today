    <script>
        (function($) {
            $(document).ready(function() {
                $.slidebars();
                var likes = parseInt($("#likes").text());

                $("#thumb").click(function(){
                    $(this).toggleClass("liked");
                    var theLike = parseInt($("#likes").text());

                    if(theLike == likes){
                        theLike++;
                    }
                    else{
                        theLike--;
                    }

                    $("#likes").text(theLike);
                });
            });
        }) (jQuery);
