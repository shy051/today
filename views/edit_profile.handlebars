<body>
    <div class="navbar navbar-fixed-top sb-slide" role="navigation">
        <nav>
            <ul class="nav nav-pills pull-right">
                <li class="sb-toggle-right" role="presentation"><a href="#">
                    <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                    </a></li>
            </ul>
            <ul class="nav nav-pills pull-left">
                <li role="presentation" class="active"><a href="add_story">
                 <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a></li>
            </ul>
        </nav>
        <center>
            <a href="/" style="text-decoration: none; color: white;"><h1 >today</h1></a>
        </center>
    </div>
    
    <div id="sb-site">
        <div class="body_container">

            <form method="post" enctype="multipart/form-data" action="/update" role="form">
                <center>
                    <p class="intro_text">
                        <font size=6>Edit Your Profile</font><br>

                    {{#each user}} <img src="{{imgSrc}}" style="float:center" width="200" /> {{/each}}

                    </p>

                        <div class="form-group">
                            <label for="image">Change photo</label>
                            <input style="margin-left:110px" type="file" id="userFile" accept="images" capture="camcorder" name="image">
                        </div>
                </center>

                <div class= "edit_story">
                    <div class="description" width="200">
                        <div class="form-group">
                            <textarea type="text" class="form-control" placeholder="Edit your Description" rows="5" name="profile_desc" ></textarea>
                        </div>
                    </div>
                    
                    <input type="submit" id="submitBtn" class="btn btn-default" value="Save" style="float:right"></input>

                </div>
            </form>


            <div class = "container-fluid">
                <!-- <div class = "row">
                    <div class="col-xs-6">
                        <a href="individual_post">
                            <img class="img-responsive" src="img/HopeSolo.jpg" alt="Image">
                        </a>
                    </div>
                    <div class="col-xs-6">
                        <img class="img-responsive" src="img/Obama.jpg" alt="Image">
                    </div>
                </div>
                <div class ="row">
                    <div class="col-xs-6">
                        <img class="img-responsive" src="img/tomato.jpg" alt="Image">
                    </div>
                    <div class="col-xs-6">
                        <img class="img-responsive" src="img/me.jpg" alt="Image">
                    </div>
                </div> -->

                <div class = "row">
                    {{#posts}}
                    <div class="col-xs-6">
                        <a href='/post/{{id}}'><img class="img-responsive" src={{imgURL}} alt="Image"></a>
                    </div>
                    {{/posts}}
                </div>
            </div>



        </div>
    </div>
    

    {{> hamburger}}

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Slidebars -->
    <script src="js/slidebars.js"></script>
