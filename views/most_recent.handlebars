<!doctype html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>today</title>

    <!-- Slidebars CSS -->
    <link rel="stylesheet" href="css/slidebars.min.css">

    <link href="css/bootstrap.min.css" rel="stylesheet">
    <link href="css/bootstrap-theme.min.css" rel="stylesheet">
    
    <!-- Custom styles for this template -->
    <link href="css/jumbotron-narrow.css" rel="stylesheet">
    <link href="css/stylesheet.css" rel="stylesheet">
    <link href='http://fonts.googleapis.com/css?family=Oswald' rel='stylesheet' type='text/css'>

     <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <div class="navbar navbar-fixed-top sb-slide" role="navigation">
        <nav>
            <ul class="nav nav-pills pull-right">
                <li class="sb-toggle-right" role="presentation"><a href="#">
                    <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                    </a></li>
            </ul>
            <ul class="nav nav-pills pull-left">
                <li role="presentation" class="active"><a href="add_story">
                 <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
                    </a></li>
            </ul>
        </nav>
        <center>
            <a href="/index" style="text-decoration: none; color: white;"><h1 >today</h1></a>
        </center>
    </div>
    <div id="sb-site">

        <div class="body_container">
            <center>
                <p class="intro_text">
                    <font size=7>Most Recent</font><br>
                    <font size=3>See what's trending around the world</font>
                </p>
            </center>

            {{#each posts}}
            <div class="postbox">
                <div class="post_data">
                    <div style="float:left">
                        <img src="{{pImgUrl}}" alt="Image" width="75" height="75"id="postprofilepic">
                        <div style="float:right"><h5>{{name}}</h5></div>
                    </div>
                    <div style="float:right">
                        <p>{{date}}</p>
                        <p>{{location}}</p>
                    </div>
                </div>
                <img src="{{imgURL}}" alt="Image" id="postpic">
                <div class="likebox">
                    <span style="float:left" class="glyphicon glyphicon-thumbs-up" aria-hidden="true" id="thumb"></span>
                    <p id="likes" style="display:inline">{{likes}}</p> Likes
                </div><br>
                <font size=4><p>{{description}}</p></font>
            </div>
            {{/each}}
        
        </div>

    </div>
    

    <div class="sb-slidebar sb-right sb-style-push" id="hamburger">
    </div>

    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.2/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>

    <!-- Slidebars -->
    <script src="js/slidebars.js"></script>
    <script>
        (function($) {
            $(document).ready(function() {
                $.slidebars();
                $('#hamburger').load('static/hamburger.html');
                var likes = parseInt($("#likes").text());

                $("#thumb").click(function(){
                    $(this).toggleClass("liked");
                    var theLike = parseInt($("#likes").text());

                    if(theLike == likes){
                        theLike++;
                    }
                    else{
                        theLike--;
                    }

                    $("#likes").text(theLike);
                });

            });
        }) (jQuery);
    </script>
</body>

</html>